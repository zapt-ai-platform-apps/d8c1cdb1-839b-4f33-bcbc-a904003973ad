{
  "rewrites": [
    {
      "source": "/api/companies/:id",
      "destination": "/api/companies/[id]"
    },
    {
      "source": "/api/engagements/:id",
      "destination": "/api/engagements/[id]"
    },
    {
      "source": "/api/resources/:id",
      "destination": "/api/resources/[id]"
    },
    {
      "source": "/api/activities/:id",
      "destination": "/api/activities/[id]"
    },
    {
      "source": "/api/files/:id",
      "destination": "/api/files/[id]"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/*.js": {
      "includeFiles": "../drizzle/schema.js",
      "maxDuration": 60
    }
  }
}